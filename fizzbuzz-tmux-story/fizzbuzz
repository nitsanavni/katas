#!/bin/bash

# Enhanced FizzBuzz script to handle multiple divisor/string pairs
# Usage: ./fizzbuzz <divisor1> <string1> [<divisor2> <string2> ... ]

# Function to process the number according to pairs
process_number() {
    local number=$1
    local output=""

    shift  # Shift to move past the number

    while [ $# -gt 1 ]; do
        local divisor=$1
        local string=$2

        if (( number % divisor == 0 )); then
            output+="$string"
        fi
        
        shift 2  # Move past the current divisor and string pair
    done

    if [ -z "$output" ]; then
        echo "$number"
    else
        echo "$output"
    fi
}

while read number; do
    process_number "$number" "$@"
done
